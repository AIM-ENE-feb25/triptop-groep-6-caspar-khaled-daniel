package "Accommodatie" {
    class AccommodatieController {
        +getAccommodatie(s)()
        +boekAccommodatie()
    }

    class AccommodatieService {
        +haalAccommodatie(s)Op()
        +verwerkBoeking()
    }

    class AccommodatieRepository {
        +save()
        +findById()
        +findAll()
    }

    class AirBnbAdapter {
        +haalDataVanAirbnb()
        +stuurBoeking()
    }

    AccommodatieController --> AccommodatieService : uses
    AccommodatieService --> AccommodatieRepository : uses
    AccommodatieService --> AirBnbAdapter : uses
}

