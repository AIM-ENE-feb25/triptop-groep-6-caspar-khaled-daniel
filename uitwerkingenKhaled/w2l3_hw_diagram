@startuml C4_Elements
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Container(backend, "Backend", "Spring Boot", "Behandelt de bedrijfslogica en gegevensverwerking")

Component(Service, "TripPackageService", "Java Class", "Beheert het samengestelde reispakket van de gebruiker")
Component(AlternativesService, "AlternativesService", "Java Class", "Biedt alternatieve bouwstenen aan als iets niet beschikbaar is")
Component(AvailabilityService, "AvailabilityService", "Java Class", "Checkt beschikbaarheid van verblijf")
Component(BookingIntegrationService, "BookingIntegrationService", "Java Class", "Communiceert met Booking.com voor overnachtingen")

Rel(backend, Service, "Gebruikt")
Rel(Service, AvailabilityService, "Checkt beschikbaarheid")
Rel(AvailabilityService, BookingIntegrationService, "Vraagt verblijf beschikbaarheid op")
Rel(Service, AlternativesService, "Vraagt alternatieven bij onbeschikbaarheid")

@enduml
