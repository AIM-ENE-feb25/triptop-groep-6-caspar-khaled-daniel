@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(reiziger, "Reiziger", "Stelt de reis samen en boekt")
Person(reisAgent, "ReisAgent", "Helpt bij het plannen van een reis")

Container(frontend, "Web Applicatie", "React", "Gebruikersinterface")
Container(backend, "Backend", "Spring Boot", "Verwerkt aanvragen en data")

ContainerDb(db, "Database", "MSSQL?")

System_Ext(identityProvider, "Identity Provider", "Google/Microsoft OAuth")
System_Ext(betalingsProvider, "Betalingsprovider", "iDEAL, PayPal")
System_Ext(accommodaties, "Accommodaties API", "Booking.com, Airbnb")
System_Ext(vervoersProviders, "Vervoer API", "NS, KLM")
System_Ext(autoverhuur, "Autoverhuur", "Sixt")
System_Ext(etenDrinken, "Eten API", "Takeaway")


Rel(reiziger, frontend, "Gebruikt interface")
Rel(reisAgent, frontend, "Assisteert reiziger")
Rel(frontend, backend, "Stuurt aanvragen en ontvangt data")
Rel(backend, db, "Slaat reisgegevens op")
Rel(backend, identityProvider, "Authenticatie via OAuth")
Rel(backend, betalingsProvider, "Verwerkt betalingen")
Rel(backend, accommodaties, "Boekt overnachtingen")
Rel(backend, vervoersProviders, "Regelt vervoer")
Rel(backend, autoverhuur, "Boekt huurauto")
Rel(backend, etenDrinken, "Bestelt maaltijden")
@enduml
